@model InventorySystem.Presentation.ViewModels.CreateSupplierViewModel

@{
    ViewData["Title"] = "Create Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #4E73DF;
        border: none;
    }

        .btn-primary:hover {
            background-color: #375a9c;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .main-title {
        color: #4E73DF;
        text-align: center;
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #6c757d;
        text-align: center;
        font-family: 'Arial', sans-serif;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }
</style>

<h1 class="main-title">Create Supplier</h1>

<h4 class="subtitle">Supplier Information</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="form-container">
            <form asp-action="CreateSupplier" method="post">
                @* <div asp-validation-summary="All" class="text-danger mb-3"></div> *@

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter supplier name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ContactInfo" class="form-label"></label>
                    <input asp-for="ContactInfo" class="form-control" placeholder="Enter contact info" />
                    <span asp-validation-for="ContactInfo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.unobtrusive.min.js"></script>
}

