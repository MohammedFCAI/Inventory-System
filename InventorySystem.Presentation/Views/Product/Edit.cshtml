@model InventorySystem.Data.Entities.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectList CategoriesList = new SelectList(ViewBag?.Categories, "Id", "Name", Model.CategoryId);
    SelectList SuppliersList = new SelectList(ViewBag?.Suppliers, "Id", "Name", Model.SupplierId);
}

<style>
    .form-container {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #4E73DF;
        border: none;
    }

        .btn-primary:hover {
            background-color: #375a9c;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .main-title {
        color: #4E73DF;
        text-align: center;
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .img-container img {
        max-width: 300px;
        max-height: 300px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 1rem;
    }
</style>

<h1 class="main-title">Edit Product</h1>
<hr />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-container">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="form-group text-center img-container">
                        <img src="@Model.ImageUrl" alt="Current Product Image" class="img-fluid" />
                    </div>
                }

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Product Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Enter product price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <input asp-for="StockQuantity" hidden />
                    <input asp-for="ImageUrl" hidden />

                    <div class="form-group">
                        <label asp-for="ImageFile" class="form-label">Upload New Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="CategoriesList">
                            <option value="">Select a Category</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SupplierId" class="form-label">Supplier</label>
                        <select asp-for="SupplierId" class="form-control" asp-items="SuppliersList">
                            <option value="">Select a Supplier</option>
                        </select>
                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />