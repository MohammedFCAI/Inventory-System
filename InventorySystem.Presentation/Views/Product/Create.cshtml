@model InventorySystem.Data.Entities.Product
@{
    ViewData["Title"] = "Create";
    SelectList CategoriesList = new SelectList(ViewBag?.Categories, "Id", "Name");
    SelectList SuppliersList = new SelectList(ViewBag?.Suppliers, "Id", "Name");
}

<h3>Create New Product</h3>

<br />
<br />

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="StockQuantity"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="ImageFile">Upload Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="CategoriesList"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="SupplierId">Supplier</label>
        <select asp-for="SupplierId" class="form-control" asp-items="SuppliersList"></select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <br />
    <input type="submit" value="Create" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
