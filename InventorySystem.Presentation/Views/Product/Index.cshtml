@model ProductViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h1>All Products</h1>
    </div>
    <div class="col-6">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary topright">
            <i class="bi bi-plus-circle-dotted"></i> Create New Product
        </a>
    </div>
</div>

<br />

<div class="row">
    <div class="col-4">
        <form method="get" asp-controller="Product" asp-action="Index">
            <div class="form-group">
                <label for="category">Filter by Category</label>
                <select class="form-control" id="category" name="categoryId" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        if (category.Id == Model.SelectedCategoryId)
                        {
                            <option value="@category.Id" selected="selected">@category.Name</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.Name</option>
                        }

                    }
                </select>
            </div>
        </form>
    </div>
</div>

@if (Model.Products.Any())
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr class="text-center">
                <th>Number</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock Quantity</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
                <th>Buy</th>
                <th>Sell</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Products.Count(); i++)
            {
                var product = Model.Products.ElementAt(i);
                <tr class="text-center">
                    <td>@(i + 1)</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-warning">
                            <i class="bi bi-eye-fill"></i>
                            Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-info">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                    </td>
                    <td>
                        <a asp-action="Buy" asp-route-id="@product.Id" class="btn btn-success">
                            <i class="bi bi-cart-plus"></i>
                            Buy
                        </a>
                    </td>
                    <td>
                        <a asp-action="Sell" asp-route-id="@product.Id" class="btn btn-warning">
                            <i class="bi bi-cash"></i>
                            Sell
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There are no products!</h4>
    </div>
}
