@model UpdateCategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #4E73DF;
        border: none;
    }

    .btn-primary:hover {
        background-color: #375a9c;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .main-title {
        color: #4E73DF;
        text-align: center;
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }
</style>

<h1 class="main-title">Edit Category</h1>
<hr />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-container">
                <form asp-action="Edit" method="post">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Category Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />