@model RegisterViewModel
 @{
     ViewData["Title"] = "Register";
 }

  <section class="vh-100">
      <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-lg-12 col-xl-11">
                  <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5 mb-3" style="height: 810px;">
                          <div class="row justify-content-center">
                              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                  <form class="mx-1 mx-md-4" asp-action="Register">

                                      <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="UserName" class="form-control" />
                                            <label asp-for="UserName" class="control-label"></label>
                                            <span asp-validation-for="UserName" class="text-danger d-block"></span>
                                        </div>
                                      </div>

                                      <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" class="form-control" />
                                            <label asp-for="Email" class="control-label"></label>
                                            <span asp-validation-for="Email" class="text-danger d-block"></span>
                                        </div>
                                      </div>

                                      <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" class="form-control" />
                                            <label asp-for="Password" class="control-label"></label>
                                            <span asp-validation-for="Password" class="text-danger d-block"></span>
                                        </div>
                                      </div>

                                      <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="ConfrimPassword" class="form-control" />
                                            <label asp-for="ConfrimPassword" class="control-label"></label>
                                            <span asp-validation-for="ConfrimPassword" class="text-danger d-block"></span>
                                        </div>
                                      </div>

                                      <div class="form-check d-flex justify-content-center mb-2">
                                          <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required/>
                                          <label class="form-check-label" for="form2Example3">
                                              I agree all statements in <a href="#!">Terms of service</a>
                                          </label>
                                      </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg m-1">Register</button>
                                        </div>

                                        <div asp-validation-summary="All" class="text-danger"></div>
                                  </form>

                              </div>
                              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                       class="img-fluid" alt="Sample image">
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>

<partial name="_ValidationScriptsPartial" />